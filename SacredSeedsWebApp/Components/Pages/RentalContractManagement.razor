@page "/rental-contract-management"

<h3>Rental Contract Management</h3>

@if (!string.IsNullOrWhiteSpace(feedback))
{
    <div class="alert alert-info">
        @feedback
    </div>
}


<div class="container border">
    <section id="section-one">
        <fieldset>
            <legend>Rental Contracts</legend>
            <div id="contract-search">
                <div id="contract-search">
                    <select class="form-select" id="search-criteria">
                        <option selected value="">Search Criteria</option>
                        <option value="">All Contracts</option>
                        <option value="">Active Contracts</option>
                        <option value="">Pending Contracts</option>
                    </select>
                </div>

                <div>
                    <button class="btn btn-primary">Search</button>
                </div>

                <div>
                    <button class="btn btn-info" @onclick="OnHandleAddNewContract">New Contract</button>
                </div>
            </div>

             <div id="results" class="">
                  <div class="" id="col-results-1">
                      <div id="table-container-1">
                          <table id="search-client-results" class="table table-striped">
                              <thead>
                                  <tr>
                                      <th>Contract Number</th>
                                      <th>Status</th>
                                      <th>Expiry Date</th>
                                      <th>Days Remaining</th>
                                      <th>Notes</th>
                                  </tr>
                              </thead>
                              <tbody>
                               @if (RentalContracts != null)
                                {
                                    @foreach (var contract in RentalContracts)
                                    {
                                        <tr>
                                            <td>@contract.ContractNumber</td>
                                            <td>@contract.IsActive</td>
                                            <td>@contract.EndDate</td>
                                            <td>@contract.DaysRemaining</td>
                                            <td>@contract.Notes</td>
                                        </tr>                                        
                                    }
                                }                             
                              </tbody>
                          </table>
                      </div>                    
                  </div>                
             </div>           
        </fieldset>
    </section>
    <!--End section-one-->
     <section id="section-two" hidden="@IsHidden" class="">
         <fieldset>
             <legend>New Contract</legend>
             <div id="new-contract" class="w-100">
                <div class="row-cols-3">
                    <label for="renter-name" class="form-label col-2" >Renter Name:</label>
                    <input class="col-4 form-control" id="renter-name" />
                </div>
                <div>
                    <label for="renter-address" class="form-label col-2">Address:</label>
                    <input class="form-control" id="renter-address" />
                </div>
                <div>
                    <label for="province" class="form-label col-2">Province:</label>
                    <select class="form-select" id="province">
                        <option vlaue="">Select Province</option>
                        <option vlaue="">AB</option>
                        <option vlaue="">SK</option>
                    </select>
                </div>
                <div>
                    <label for="city" class="form-label col-2">City:</label>
                    <select class="form-select" id="city">
                        <option vlaue="">Select City</option>
                        <option vlaue="">Edmonton</option>
                        <option vlaue="">Calgary</option>
                    </select>
                </div>
                <div>
                    <label for="renter-phone-number" class="form-label col-2">Phone Number:</label>
                    <input class="form-control" id="renter-phone-number" />
                </div>
                <div>
                    <label for="rate" class="form-label col-2">Rate:</label>
                    <select class="form-select" id="rate">
                        <option vlaue="0">Select rate</option>
                        <option vlaue="80">80</option>
                        <option vlaue="120">120</option>
                        <option vlaue="100">100</option>
                    </select>
                </div>
                <div>
                    <label for="start-date" class="form-label col-2">Start Date:</label>
                    <input class="form-control" type="date" id="start-date" />
                </div>
                <div>
                    <label for="end-date" class="form-check-label col-2">End Date:</label>
                    <input class="form-control" type="date" id="end-date" />
                </div>
                <div>
                    <label for="end-date" class="form-check-label col-2">Renter Verified:</label>
                    <span>Yes</span><input class="form-check-input mx-3" name="renter-verification" type="radio" id="renter-verified" />
                    <span>No</span><input class="form-check-input mx-3" name="renter-verification" type="radio" id="renter-not-verified" />
                </div>
                <div>
                    <label for="end-date" class="form-check-label col-2">Contract Status:</label>
                    <span>Active</span><input class="form-check-input mx-3" name="contract-status" type="radio" id="contract-active" />
                    <span>Pending</span><input class="form-check-input mx-3" name="contract-status" type="radio" id="contract-Inactive" />
                </div>
             </div>
             <div id="new-contract-buttons-menu" class="m-auto">
                <div>
                    <button class="btn btn-primary">Save</button>
                </div>
                <div>
                    <button class="btn btn-info" @onclick="ClearFields">Clear</button>
                </div>
                <div>
                    <button class="btn btn-danger" @onclick="OnHandleCancelNewContract">Cancel</button>
                </div>
             </div>
         </fieldset>
     </section>

</div>

